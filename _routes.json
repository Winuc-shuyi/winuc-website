{
  "version": 1,
  "include": ["/*"],
  "exclude": [
    "/_next/*",
    "/api/*",
    "/static/*"
  ],
  "routes": [
    {
      "src": "/projects/[^/]+/?$",
      "dest": "/projects/$1/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "status": 404,
      "dest": "/404.html"
    }
  ],
  "headers": {
    "cache-control": "public, max-age=14400, s-maxage=14400, stale-while-revalidate=14400"
  }
} 